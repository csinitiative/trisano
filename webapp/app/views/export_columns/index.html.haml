- content_for :title do
  =t 'export_columns'

/- content_for :name do

/- content_for :tools do

- content_for :tools_two do
  = button_to(t("create_new_export_column"), new_export_column_path, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        =t 'descriptive_name'
      %th
        =t 'cdc_name'
      %th
        =t 'disease_group'
      %th
    - for xp_column in @export_columns
      %tr.roll
        %td.forminformation
          .formname
            = link_to h(xp_column.name) || (t("not_specified")), xp_column
        %td
          = h(xp_column.export_column_name)
        %td
          = h(xp_column.export_disease_group.name) unless xp_column.export_disease_group.nil?
        %td.tools
          = link_to(t('edit'), edit_export_column_path(xp_column))
          |
          = link_to(t('show'), export_column_path(xp_column))
          |
          = link_to(t('delete'), export_column_path(xp_column), :method => :delete)
