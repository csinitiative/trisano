%div{:id => "fb-inplace-container", :class => "fb-container"} 
  = error_messages_for :value_element
  %div{:id => "new-value-form", :class => 'fb-inplace-form'}

    - remote_form_for(value_element, :html => {:name => 'value-element-new-form'}, :loading => "$('create_value_submit_#{@value_element.parent_element_id}').disabled = 'disabled';" ) do |f|

      = render :partial => 'form', :locals => { :f => f }

      %p
        = f.submit(t("create"), :id => "create_value_submit_#{@value_element.parent_element_id}")
        &nbsp;&nbsp;
        = link_to_function t("close"), "$('value-mods-#{@value_element.parent_element_id}').down('form').reset(); Effect.BlindUp($('value-mods-#{@value_element.parent_element_id}'), { duration: 0.1 })"

