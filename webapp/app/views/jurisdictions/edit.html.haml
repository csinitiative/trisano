- content_for :title do
  Edit Jurisdiction

- content_for :tools do
  = link_to '< Back to Jurisdictions', jurisdictions_path
  %p
  
#jurisdiction_info
  %table.list
    %tr
      %th.forminformation
        Jurisdiction
      %th
      %tr
        %td.forminformation
          .formname
            = h(@jurisdiction.place.name)
          .tools
            = h(@jurisdiction.place.short_name)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            Edit
            |
            = link_to('Show', jurisdiction_path(@jurisdiction))

#jurisdiction_form
  = error_messages_for :object => @jurisdiction.place

  - form_for(:jurisdiction, @jurisdiction, :url => jurisdiction_path(@jurisdiction), :html => { :method => :put }) do |f|

    = render :partial => 'form', :locals => { :f => f, :jurisdiction => @jurisdiction}

    = f.submit "Update"