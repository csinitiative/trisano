- content_for :title do
  =t 'edit_place'

- content_for :tools do
  = link_to t('back_to', :name => t('places_normal_case')), places_path
  %p
  
#rot
  %table.list
    %tr
      %th.forminformation
        =t 'place'
      %th
      %tr
        %td.forminformation
          .tools
            = h(@place_entity.place.short_name)
          .formname
            = h(@place_entity.place.name)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            =t 'edit'
            |
            = link_to(t('show'), place_path(@place_entity))

#rot
  = error_messages_for :place_entity

  - form_for(@place_entity, :url => place_path(@place_entity), :html => { :method => :put }) do |f|
    = render :partial => 'form', :locals => { :f => f, :place_entity => @place_entity }
    = f.submit t("update")