-form_tag nil, :method => :get do
  %div#name_criteria{:style => "margin-top: 5px"}
    %div{ :class => "horiz" }
      %label{:for => :name}=t('place_name')
      =text_field_tag :name, params[:name], :size => "30", :class => "search"
      %label=t('participation_type')
      %select{ :name => "participation_type" }
        %option
        =options_for_select([["Diagnostic Facility", "DiagnosticFacility"], ["Hospitalization Facility", "HospitalizationFacility"], ["Lab", "Lab"], ["Place Exposure", "InterestedPlace"], ["Reporting Agency", "ReportingAgency"]], :selected => params[:participation_type])

      %input{ :type => "submit", :id => 'submit_place_search', :value => t("search_button") }

%br{ :clear => 'all' }
%br
