- content_for :title do
  People Search

- form_tag(search_path + "/people", :method => :get) do
  %span.horiz
    = label_tag :last_name
    = text_field_tag :last_name, params[:last_name]

  %span.horiz
    = label_tag :first_name
    = text_field_tag :first_name, params[:first_name]

  %span.horiz
    = label_tag :birth_date
    = text_field_tag :birth_date, params[:birth_date]

  %span.horiz
    = label_tag "&nbsp;"
    = submit_tag "Search"

  %span.vert
    = label_tag "&nbsp;"
    = labeled_check_box_tag :use_starts_with_search

- if !@people.blank?
  %br
  %table{:style => "table-layout: fixed"}
    %tr{:style => "text-align: left"}
      %th
        Last Name
      %th
        First Name
      %th
        Middle Name
      %th
        Birth Date
    - for person in @people
      %tr.person{:style => "text-align: left"}
        %td.last_name
          = person['last_name']
        %td.first_name
          = person['first_name']
        %td.middle_name
          = person['middle_name']
        %td.birth_date
          - if !person['birth_date'].blank?
            = person['birth_date'].to_date

- params.delete('action')
- params.delete('controller')
- if @people.blank? && flash[:error].blank? && !params.values_blank?
  %span
    Your search returned no results.
  %br
  %br
