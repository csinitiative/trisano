- content_for :title do
  List LOINC Codes

- content_for :tools_two do
  = button_to("Create New LOINC Code", new_loinc_code_path, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        LOINC Code
      %th
        Test Name
      %th
        &nbsp;
      - @loinc_codes.each do |loinc_code|
        %tr.roll
          %td.forminformation
            .formname
              %span.common_name
                =link_to h(loinc_code.loinc_code), loinc_code
          %td
            %span.test_name
              &= loinc_code.test_name
          %td
            =loinc_code_tools loinc_code

  %span.vert-break
    =will_paginate @loinc_codes
