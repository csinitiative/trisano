- content_for :title do
  Create a LOINC Code

- content_for :tools do
  = link_to h('< Back to LOINC Codes'), loinc_codes_path
  %p

- form_for @loinc_code do |f|
  = f.error_messages

  %table.list
    %tr
      %th.forminformation
        Edit LOINC Code

    %tr
      %td
        %span.vert
          = f.label      :loinc_code, 'LOINC code'
          = f.text_field :loinc_code, :size => 20
        %span.vert
          = f.label      :test_name
          = f.text_field :test_name, :size => 60

  %span.vert
    = submit_tag "Create"
