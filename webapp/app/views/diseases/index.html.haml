- content_for :title do
  Diseases

/- content_for :name do

/- content_for :tools do

- content_for :tools_two do
  = button_to(t('create_new_disease'), {:action => "new"}, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        =t('diseases')
      %th
        =t('cdc_code')
      %th
        Actions
    - for disease in @diseases
      %tr.roll
        %td.forminformation
          .formname
            = link_to h(disease.disease_name), disease
            - if disease.sensitive?
              %i= "-- #{t('sensitive_disease')} --"
            .tools
              = disease.active? ? t('active') :  t('inactive')
        %td
          =h disease.cdc_code
        %td
          .tools
            = render_disease_tool_links disease
