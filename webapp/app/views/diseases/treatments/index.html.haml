- content_for :title do
  =t :treatments_for, :thing => @disease.disease_name

- content_for :tools do
  =link_to t(:back_to, :name => t(:diseases)), diseases_path
  |
  =link_to "#{t('clear_search_criteria')}", disease_treatments_path(@disease)
  %p

-unless @disease.treatments.empty?
  =render_disease_treatments(@disease.treatments, :with => disassociate_disease_treatments_options(@disease))
  %br.vert-break
  %br

=render(:partial => 'treatments/search_form')

=render_disease_treatments(@treatments, :with => associate_disease_treatments_options(@disease))

=render_apply_to_diseases(@disease, apply_to_disease_treatments_path(@disease))
