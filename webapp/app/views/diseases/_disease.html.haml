%tr
  %td.forminformation
    .formname
      = h(disease.disease_name)

    %span{ :class => "horiz" }
      %b
        =t('status')
      %br
      = disease.active? ? t('active') :  t('inactive')

    %span{ :class => "horiz" }
      %b
        =t('cdc_netss_code')
      %br
      = h(disease.cdc_code)

    %span{ :class => "horiz" }
      %b
        =t('cdc_send_status')
      %br
      = h(disease.external_codes.collect { |ex_code| ex_code.code_description }.join(', '))

  %td
    .tools
      =link_to_unless_current t('edit'), edit_disease_path(disease)
      |
      =link_to_unless_current t('show'), disease
