- content_for :title do
  = "#{h(@code_name.description)} - New Code"

/- content_for :name do

- content_for :tools do
  = link_to '&lt; Back to Codes', index_code_path(@code_name.code_name)
  %p

= error_messages_for :external_code

#rot
  %table.list
    %tr
      %th.forminformation
        =t "code_information"
      %th
    %tr
      %td
        .tools
          %b=ct "type"
          = h(@external_code.code_name)

#rot
  %table.list
    %tr
      %th.forminformation
        =t "edit_code"
    %tr
      %td
        - form_for(:external_code, :url => create_code_path(@external_code.code_name), :builder => ExtendedFormBuilder) do |code_form|
          = code_form.hidden_field :code_name
          %span.vert-break
            =code_form.label :the_code
            = code_form.text_field :the_code, :size => 20, :maxlength => 20
          = render("external_codes/#{@code_name.code_name}/form", :code_form => code_form) rescue render("external_codes/form", :code_form => code_form)
          = code_form.submit t("create")
