- content_for :title do
  =t 'codes'

/- content_for :name do

#rot
  %table.list
    %tr
      %th.forminformation{ :colspan => 2 }
        = t "list_codes"
    - for code_name in @code_names
      %tr
        %td.forminformation
          .formname
            = link_to h(code_name.description), index_code_path(code_name.code_name)
          .tools
            =ct "code_name"
            = h(code_name.code_name)
            -# %br
            -# = button_to "New #{h(code_name.description)} Code", new_code_path(code_name.code_name)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to t("list"), index_code_path(code_name.code_name)
