- content_for :title do
  Edit Code Detail

/- content_for :name do

- content_for :tools do
  = link_to '< Back to Codes', codes_path
  %p

- content_for :tools_two do
  = button_to("Create new code", {:action => "new"}, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        Code Information
      %th
    %tr
      %td
        .formname
          = h(@external_code.the_code)
        .tools
          = h(@external_code.code_description)
          %br
          %b Code Type:
          = h(@external_code.code_name)
          %br
          %b Sort Order:
          = h(@external_code.sort_order)
      %td
        .tools{:style => "position: absolute; right: 15px;"}
          Edit
          |
          = link_to"Show", code_path(@external_code)
          |
          = link_to("Delete", code_path(@external_code), :method => :delete, :confirm => "Really delete code?")

#rot
  %table.list
    %tr
      %th.forminformation
        Edit Code
    %tr
      %td
        - form_for(@external_code, code_path(@external_code), :builder => ExtendedFormBuilder) do |code_form|

          %span.vert-break
            %label Code
            = code_form.text_field :the_code
          %span.vert-break
            %label Description
            = code_form.text_field :code_description
          %span.vert-break
            %label Type
            = code_form.text_field :code_name
          %span.vert-break
            %label Sort Order
            = code_form.text_field :sort_order
          - if @external_code.code_name == 'county'
            %span.vert-break
              %label Jurisdiction
              = code_form.select :jurisdiction_id, Place.jurisdictions.map{ |j| [j.name, j.id] }, {:prompt => 'Choose One'} 
          %br
          = code_form.submit "Update"
