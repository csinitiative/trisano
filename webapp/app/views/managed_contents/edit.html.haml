= javascript_include_tag 'ckeditor/ckeditor'

- content_for :title do
  =t('custom_footer')

/- content_for :name do

#edit-custom-footer-form

  %h2
    = t('edit_thing', :name => t('custom_footer'))

  = error_messages_for :custom_footer

  - form_for(@managed_content, :url => managed_content_path(@managed_content)) do |f|
    = render :partial => "form", :locals => { :f => f }

    %br{ :clear => 'all' }
    %br
    = f.submit t('submit')