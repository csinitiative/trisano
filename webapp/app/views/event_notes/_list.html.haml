- for note in notes
  - next if note.id.nil?
  %table.list
    %tr
      %th.forminformation
        = h(note.user.best_name)
      %th
    %tr.roll
      %td.forminformation
        %small
          - unless note.note_type.blank?
            %span{ :class => 'note-type' }
              = h("#{note.note_type.humanize} ")
          = h(note.created_at.strftime("%a, %b %d, %Y at %I:%M %p"))
      %td
    %tr
      %td
        - note_body = simple_format(note.note)
        - if note.struckthrough?
          %div{:id => "note_#{note.id}", :class => 'struck-through'}= h(note_body)
        - else
          %div{:id => "note_#{note.id}"}= h(note_body)
      %td
