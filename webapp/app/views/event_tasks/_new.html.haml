#new-task-form{:style => "width: 40%; position: relative"}
  %div{ :class => 'inline-form' }
    %h2=t('new_task')
    =error_messages_for :task

    - remote_form_for(@task, :loading => "$('new-task-create').disabled = 'disabled';", :url => event_tasks_path(@event)) do |f|
      =render :partial => "form", :locals => { :f => f }

      %br{ :clear => 'all' }
      %br
      = f.submit(t('create'), :disable_with => t('creating'), :id => 'new-task-create')
      &nbsp;&nbsp;
      = link_to_function t("close"), "Effect.BlindUp($('new-task-form'), { duration: 0.1 }); $j(window).scrollTop(0);"
