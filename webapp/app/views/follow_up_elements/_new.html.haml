%div{:id => "new-follow-up-form"}

  %h3
    =t 'add_follow_up'

  = error_messages_for :follow_up_element

  - remote_form_for(follow_up_element, {}, :loading => "$('create_follow_up_submit_#{@follow_up_element.parent_element_id}').disabled = 'disabled';" ) do |f|

    = render :partial => 'form', :locals => { :f => f }

    %p
      = f.submit(t("create"), :id => "create_follow_up_submit_#{@follow_up_element.parent_element_id}")
      &nbsp;&nbsp;
      = link_to_function t("close"), "$('follow-up-mods-#{@follow_up_element.parent_element_id}').down('form').reset(); Effect.BlindUp($('follow-up-mods-#{@follow_up_element.parent_element_id}'), { duration: 0.1 })"
