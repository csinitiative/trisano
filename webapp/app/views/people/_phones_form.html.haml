%fieldset.form
  %legend
    ="#{t 'telephone'}/#{t 'Email'}"
  %div{:id => 'telephones'}
    -core_element(:telephones, f, :horiz) do
      -f.fields_for(:telephones, :builder => ExtendedFormBuilder) do |telephone_form|
        %div.data_telephones
          =render :partial => 'people/telephone', :locals => { :f => telephone_form }
        %p
          =add_record_link f, :telephones, t("add_telephone"), :partial => 'people/telephone'

  %div{:id => 'email_addresses'}
    -core_element(:email_addresses, f, :horiz) do
      -f.fields_for(:email_addresses, :builder => ExtendedFormBuilder) do |email_form|
        %div.data_email_addresses
          =render :partial => 'people/email', :locals => { :f => email_form }
        %p
          =add_record_link f, :email_addresses, t("add_an_email_address"), :partial => 'people/email'
