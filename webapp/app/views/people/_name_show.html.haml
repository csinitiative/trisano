%fieldset.form
  %legend= t 'name'
  -f.fields_for(:person, :builder => ExtendedFormBuilder) do |person_form|
    %div.data_name
      -core_element_show :last_name, person_form, :horiz do
        =person_form.label(:last_name)
        %span.data_last_name=h(person.last_name)
      -core_element_show :first_name, person_form, :horiz do
        =person_form.label(:first_name)
        %span.data_first_name=h(person.first_name)
      -core_element_show :middle_name, person_form, :horiz do
        =person_form.label(:middle_name) 
        %span.data_middle_name=h(person.middle_name)

      -if !event_form.nil?
        -core_element_show :parent_guardian, event_form, :horiz do
          =event_form.label :parent_guardian
          %span.data_parent_guardian=h(event.parent_guardian)
