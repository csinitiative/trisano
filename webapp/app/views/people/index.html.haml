- content_for :title do
  People

/- content_for :name do
/  People

/- content_for :tools do
/  = link_to 'New person', new_person_path

- content_for :tools_two do
  = button_to("Create new person", {:action => "new"}, { :method => :get })

- form_tag people_path, :method => :get do
  %span.horiz
    = label_tag :last_name
    = text_field_tag :last_name, params[:last_name]

  %span.horiz
    = label_tag :first_name
    = text_field_tag :first_name, params[:first_name]

  %span.horiz
    = label_tag :birth_date
    = text_field_tag :birth_date, params[:birth_date]

  %span.horiz
    = label_tag "&nbsp;"
    = submit_tag "Search"

  %span.vert-break
    = label_tag "&nbsp;"
    = labeled_check_box_tag :use_starts_with_search
%br

#rot
  %table.list
    %tr
      %th.forminformation
        People
      %th
    - @people.each do |person|
      %tr.roll
        %td.forminformation
          %fieldset
            - fields_for(person, :builder => ExtendedFormBuilder) do |f|
              %div.data_person
                %span.data_person_id{:style => 'display: none'}=h(person.person_entity.id)
                -f.fields_for(:person, :builder => ExtendedFormBuilder) do |name_form|
                  %div.data_name
                    %div.formname
                      %b
                        %span.data_first_name=person.first_name
                        %span.data_middle_name=person.middle_name
                        %span.data_last_name=person.last_name
                = render :partial => 'people/age_show', :locals => {:person => person, :f => f, :event => nil}
                = render :partial => 'people/address_show', :locals => {:address => person.person_entity.canonical_address, :f => f}
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to 'Edit', edit_person_path(person.person_entity)
            |
            = link_to 'Show', person_path(person.person_entity)
  %br
  = will_paginate @people
