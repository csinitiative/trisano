- content_for :title do
  People

/- content_for :name do
/  People

/- content_for :tools do
/  = link_to 'New person', new_person_path

- content_for :tools_two do
  = button_to("Create new person", {:action => "new"}, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        People
      %th
    - @people.each do |person|
      %tr.roll
        %td.forminformation
          %fieldset
            - fields_for(person, :builder => ExtendedFormBuilder) do |f|
              %span.data_person
                %span.data_person_id{:style => 'display: none'}=h(person.person_entity.id)
                = render :partial => 'people/name_show', :locals => {:person => person, :f => f, :event_form => nil}
                = render :partial => 'people/address_show', :locals => {:address => person.person_entity.canonical_address, :f => f}
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to 'Edit', edit_person_path(person.person_entity)
            |
            = link_to 'Show', person_path(person.person_entity)
  %br
  = will_paginate @people
