- content_for :title do
  =t "edit_person"

/- content_for :name do

- content_for :tools_two do
  = save_buttons(@person)

- content_for :tools do
  = link_to t('back_to', :name => t('people_normal_case')), people_path
  %p

#rot
  %table.list
    %th.forminformation
      =t 'person'
    %th
    %tr
      %td
        .tools{:style => "position: absolute; right: 15px;"}
          =t 'edit'
          |
          = link_to t('show'), person_path(@person)

#rot
  = error_messages_for :object => [@person]

  - form_for(@person, :url => person_path(@person), :builder => ExtendedFormBuilder, :html => {:name => 'edit_person_entity'}) do |pe|
    = render :partial => 'form', :locals => { :f => pe, :person_data => @person }
    = pe.submit t("save_and_exit"), :style => "display: none", :onclick => "this.disabled=true;"

= alert_if_changed(@person)
