#rot
  - if @role.privileges_roles.size > 0
    %table.list
      %tr
        %th
          =t 'privileges'
      - for p in @role.privileges.sort_by(&:name)
        %tr
          %td
            .formname
              = h(p.name)
            .tools
              = h(p.description)
  - else
    =t 'no_privileges'
