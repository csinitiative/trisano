%table.list
  %tr
    %th.forminformation
      =t 'edit_role'
  %tr
    %td
      %span.vert-break
        = f.label(:role_name)
        = f.text_field(:role_name, :size => 20, :maxlength => 100)
      %p

%table.list
  %tr
    %th.forminformation
      =t 'edit_privileges'
    %th
  - Privilege.all.sort_by(&:name).each do |privilege|
    = render :partial => 'privilege', :locals => { :f => f, :role => @role, :privilege => privilege }
