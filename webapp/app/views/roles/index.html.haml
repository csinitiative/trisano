- content_for :title do
  =t 'roles'

/- content_for :name do
/  Roles

/- content_for :tools do
/  = link_to 'New role', new_role_path

- content_for :tools_two do
  = button_to(t("create_new_role"), {:action => "new"}, { :method => :get })

#rot
  %table.list
    %tr
      %th.forminformation
        =t 'roles'
      %th
    - for role in @roles.sort_by {|r| r.role_name}
      %tr.roll
        %td.forminformation
          .formname
            = link_to h(role.role_name), role
          .tools
            = link_to(t('delete'), role, :confirm => t('are_you_sure'), :method => :delete)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to t('edit'), edit_role_path(role)
            |
            = link_to t('show'), role
