- content_for :title do
  =t "edit_export_conversion_value"

- content_for :name do
  = h(@export_column.name)

- content_for :tools do
  = link_to t("back_to", :name => "export column"), export_column_path(@export_column)
  %p

#rot
  %table.list
    %tr
      %th.forminformation
        =t "export_conversion_value"
      %th
      %tr
        %td.forminformation
          .formname
            = t "convert_to", :from_value => h(@export_conversion_value.value_from), :to_value => h(@export_conversion_value.value_to)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            =t "edit"
            |
            = link_to(t('delete'), export_column_export_conversion_value_path(@export_column, @export_conversion_value), :method => :delete)
#rot
  = error_messages_for :export_conversion_value

  - form_for([@export_column, @export_conversion_value]) do |f|

    = render :partial => 'form', :locals => { :f => f, :editing => true }

    = f.submit t("update")
