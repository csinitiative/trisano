- content_for :title do
  Event Queues

/- content_for :name do

/- content_for :tools do

- content_for :tools_two do
  = button_to(t('create_new_event_queue'), new_event_queue_path, :id => 'create_event_queue')

#rot
  %table.list
    %tr
      %th.forminformation
        =t('event_queues')
      %th
    - for event_queue in @event_queues
      %tr.roll
        %td
          .formname
            = link_to h(event_queue.queue_name), event_queue
          .tools
            = h(event_queue.jurisdiction.place.name)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to t('show'), event_queue
            |
            = link_to t('edit'), edit_event_queue_path(event_queue)
            |
            = link_to t('delete'), event_queue_path(event_queue), :method => :delete
