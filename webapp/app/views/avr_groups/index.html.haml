- content_for :title do
  AVR Groups

- content_for :tools_two do
  = button_to(t('create_new_avr_group'), {:action => "new"}, { :method => :get })

.vert-break#rot
  %table.list
    %tr
      %th.forminformation
        =t('avr_groups')
      %th
    - for avr_group in @avr_groups
      %tr.roll
        %td.forminformation
          .formname
            = link_to h(avr_group.name), avr_group
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to t('edit'), edit_avr_group_path(avr_group)
            |
            = link_to t('show'), avr_group

