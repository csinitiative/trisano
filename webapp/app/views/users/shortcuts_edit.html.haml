- content_for :title do
  Configure Shortcuts

%table.list
  %tbody
    %tr
      %th.forminformation
        Keyboard Shortcuts
      - each_shortcut do |label,val|
        %tr.roll
          %td.forminformation
            .formname
              %b
                = val
            .tools
              = @user.shortcut_settings[label]

- form_for(@user, :url => {:action => "shortcuts"}, :method => "put", :html => {:id => "shortcut_form"} ) do |f|
  - f.fields_for :shortcut_settings do |shortcut|
    - each_shortcut do |label,val|  
      %span{ :class => "vert" }
        = shortcut.label label, val
        -# 'Ctrl+Alt+Shift+Page_down' is the longest string.
        = shortcut.text_field label, :value => @user.shortcut_settings[label], :size => 20, :maxlength => 20, :onfocus => "change_shortcut('#{label}')", :onblur => "shortcut_set('#{label}')", :style => "background: #FFF", :autocomplete => "off"
  %p
  = f.submit "Update Shortcuts"
