  Edit User

/- content_for :name do

- content_for :tools do
  = link_to '< Back to Users', users_path
  %p

- content_for :tools_two do
  = button_to("Create new user", {:action => "new"}, { :method => :get })
  
#rot
  %table.list
    %tr
      %th.forminformation
        User
      %th
      %tr
        %td.forminformation
          .tools
            = h("#{@user.first_name} #{@user.last_name}")
          .formname
            UID:
            = h(@user.uid)
          .tools
            Username:
            = h(@user.user_name)
            %br
            Given Name:
            = h(@user.given_name)
            %br
            Initials:
            = h(@user.initials)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            Edit
            |
            = link_to 'Show', @user

#rot
  = error_messages_for :object => [@user, @user.role_memberships]

  - form_for(@user) do |f|

    = render :partial => 'form', :locals => { :f => f, :user_data => @user }

    = f.submit "Update"
