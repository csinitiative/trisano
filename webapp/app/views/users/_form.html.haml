%table.list
  %tr
    %th.forminformation
      Edit User
  %tr
    %td
      %span{ :class => "horiz" }
        = f.label(:uid, "UID")
        = f.text_field(:uid, :size => 25, :maxlength => 50)
      %span.vert-break
        = f.label(:user_name)
        = f.text_field(:user_name, :size => 20, :maxlength => 20)
      %span{ :class => "horiz" }
        = f.label(:first_name)
        = f.text_field(:first_name, :size => 25, :maxlength => 32)
      %span.vert-break
        = f.label(:last_name)
        = f.text_field(:last_name, :size => 25, :maxlength => 64)
      %span{ :class => "horiz" }
        = f.label(:given_name)
        = f.text_field(:given_name, :size => 25, :maxlength => 127)
      %span.vert-break
        = f.label(:generational_qualifer)
        = f.text_field(:generational_qualifer, :size => 8, :maxlength => 8)
      %span.vert-break
        = f.label(:initials)
        = f.text_field(:initials, :size => 8, :maxlength => 8)
      %span.vert-break
        = f.label(:status)
        = f.select :status, User.status_array
        %i Disable access to the system

      %p

