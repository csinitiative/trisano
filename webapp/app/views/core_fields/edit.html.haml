- content_for :title do
  = t('edit_core_field')

- content_for :tools do
  = link_to h(t('back_to_core_fields')), core_fields_path
  %p
  
#rot
  %table.list
    %tr
      %th.forminformation
        = t('core_field')
      %th
      %tr
        %td.forminformation
          .formname
            = h(@core_field.name)
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = t('edit')
            |
            = link_to t('show'), @core_field
#rot
  = error_messages_for :core_field

  - form_for(@core_field) do |f|

    = render :partial => 'form', :locals => { :f => f }

    = f.submit t('submit')
