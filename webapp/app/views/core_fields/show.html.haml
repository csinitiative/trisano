- content_for :title do
  = t('core_fields_detail')

- content_for :tools do
  = link_back_to_core_fields @disease
  %p

#rot
  %table.list
    %tr
      %th.forminformation
        =t('core_field')
      %th
      %tr
        %td.forminformation
          .formname
            = h(@core_field.name)
          - if @core_field.rendered?(@disease)
            .formnamesubtext
              = t(:displayed)
          .tools
            = simple_format(h(@core_field.help_text))
        %td
          .tools{:style => "position: absolute; right: 15px;"}
            = link_to_edit_core_field(@core_field, @disease)
            |
            = t('show')
