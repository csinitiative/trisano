-content_for :title do
  ="Add LOINC Codes to #{@common_test_type.common_name}"

-content_for :tools do
  =link_to h("< Edit #{@common_test_type.common_name}"), edit_common_test_type_path(@common_test_type)
  %p

%h3 Search for available LOINC codes
-form_tag add_loincs_common_test_type_path(@common_test_type), :method => :get do
  %span.vert
    =label_tag :loinc_code_search_test_name, 'Test Name'
    =text_field_tag :loinc_code_search_test_name, params[:loinc_code_search_test_name], :size => 40

  %span.horiz
    =label_tag "&nbsp;"
    =submit_tag "Search", :name => :do

%span.vert-break
  &nbsp;

-if defined? @loinc_codes
  -if @loinc_codes.empty?
    %b No records found.
  -else
    -form_tag update_loincs_common_test_type_path(@common_test_type), :method => :post do
      %table.list
        %tr
          %th
            Add
          %th.forminformation
            LOINC Code
          %th
            Test Name
        -@loinc_codes.each do |loinc_code|
          %tr.roll
            %td
              =loinc_code_add_check_box_tag loinc_code
            %td.forminformation
              .formname
                %span.loinc_code
                  =link_to h(loinc_code.loinc_code), loinc_code
            %td
              %span.test_name
                &=loinc_code.test_name
      %span.vert
        =submit_tag "Update"

