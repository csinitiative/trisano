.vert-break
  -form_for common_test_type do |f|

    %table.list
      %tr
        %th.forminformation
          = t('edit_common_test_type')

      %tr
        %td
          =f.error_messages
          %span.vert
            =f.label      :common_name
            =f.text_field :common_name
          %span.vert
            %label
              =t('diseases')
            -scroll_pane do
              =disease_check_boxes f.object_name, common_test_type.disease_ids

    %span.vert
      =create_or_update_button common_test_type
