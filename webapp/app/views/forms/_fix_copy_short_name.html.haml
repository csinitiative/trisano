%p
  -remote_form_for_fixing_short_names(@form_element) do
    %span
      =label_tag(:short_name, t(:fix_short_name))
      =text_field_tag(:short_name, @lib_element.question.short_name)
      =hidden_field_tag(:reference_element_id, @form_element.id)
      =hidden_field_tag(:lib_element_id, @lib_element.id)
    %span
      %label
        &nbsp;
      =submit_tag(t(:continue), :id => "submit_short_name_fix_#{@form_element.id}")
      &nbsp;&nbsp;
      =link_to_close_question_form(t(:close), @form_element)