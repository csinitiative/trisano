%tr
  %td=h form.version
  %td=ld(form.created_at)
  %td
    -form.diseases.each do |disease|
      =h disease.disease_name
      %br
  %td
    =t "form_id", :form_id => h(form.id)
    %br
    =h(t('form_specific.element', :count => form.element_count))
    %br
    =h(t('form_specific.question', :count => form.question_count))
    %br
    =t('x_elements_with_core_fields', :x => h(t('form_specific.element', :count => form.core_element_count)))
    %br
    =h(t('cdc_export_question', :count => form.cdc_question_count))
    %br
    =t("applies_to_x_events", :x => h(t('form_specific.event', :count => form.form_references.size)))
    %br
  %td
    =link_to t('fix_short_names'), edit_form_questions_path(form) unless current_page? edit_form_questions_path(form)
