%fieldset.form
  %legend
    Event Attachments

  - unless attachments.empty?
    #task-message{ :align => 'center' }
    %table.list
      %thead
        %tr
          %th File name
          %th Category
          %th Content type
          %th Size
          %th Uploaded
          %th &nbsp;
      %tbody
        - for attachment in attachments
          %tr
            %td
              %span{:class => :filename}
                =h attachment.filename
            %td
              %span{:class => :category}
                =h attachment.category.humanize
            %td
              %span{:class => :content_type}
                =h attachment.content_type
            %td
              %span{:class => :size}
                =h attachment.size
            %td
              %span{:class => :updated_at}
                =h attachment.updated_at
            %td
              = link_to("Open", event_attachment_path(attachment.event, attachment))
              

  - else
    %span No attachments

%br
