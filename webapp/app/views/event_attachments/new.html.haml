- content_for :title do
  Add Event Attachment

- content_for :name do
  = render(:partial => 'events/basic_event_info', :locals => { :event => @event })

#new-attachment-form

  %h2
    New Attachment

  = error_messages_for :attachment

  - form_for(@attachment, :url => event_attachments_path(@event), :html => { :multipart => true }) do |f|
    = render :partial => "form", :locals => { :f => f }

    %br{ :clear => 'all' }
    %br
    = f.submit "Create"

%br

%hr

#existing-attachments
  %h2
    Existing Attachments
  #tasks
    = render(:partial => 'event_attachments/list', :locals => { :attachments => @event.attachments })