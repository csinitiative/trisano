.phone
  - core_element :entity_location_type_id, f, :horiz do
    = f.label(:entity_location_type_id)
    = f.dropdown_code_field(:entity_location_type_id, 'telephonelocationtype', {}, {})
  -if Telephone.use?(:country_code)
    - core_element :country_code, f, :horiz do
      = f.label(:country_code)
      = f.core_text_field(:country_code, {:size => 3})
  -if Telephone.use?(:area_code)
    - core_element :area_code, f, :horiz do
      = f.label(:area_code)
      = f.core_text_field(:area_code, {:size => 3})
  - core_element :phone_number, f, :horiz do
    = f.label(:phone_number)
    = f.core_text_field(:phone_number, {:size => 8})
  - core_element :extension, f, :horiz do
    = f.label(:extension)
    = f.core_text_field(:extension, {:size => 6})

  %span.horiz
    - unless f.object.new_record?
      = f.label :_delete
      = f.check_box :_delete

%hr
