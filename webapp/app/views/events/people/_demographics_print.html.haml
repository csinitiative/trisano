%span.subsection-header
  =t('demographics')
-f.fields_for(:person,  :builder => ExtendedFormBuilder) do |p|
  -core_element_print :birth_gender_id, p, :horiz do
    %span.print-label=ct('birth_gender')
    %span.print-value=h(person.birth_gender_description)
  -core_element_print :primary_language_id, p, :horiz do
    %span.print-label=ct('primary_language')
    %span.print-value=h(person.primary_language_description)
  -core_element_print :ethnicity_id,  p, :vert do
    %span.print-label=ct('ethnicity')
    %span.print-value=h(person.ethnicity_description)
  %span.vert
    %span.print-label=ct('race')
    %span.print-value=h(person.race_description)
