%div{:id => "clinicians"}
  = live_search('Search for an existing clinician', :search_field => 'clinicians_search', :results => 'live_search_clinicians', :select => 'last_name', :event_type => event_form.object_name)

  - event_form.fields_for(:clinicians, :builder => ExtendedFormBuilder) do |clinician_fields|
    -# Currently we don't allow editing clinician information (because changing it for one event will change it for all).
    -# This will change soon, and when it does we can undo this.

    -# If this is a new record and we are not returning from a failed validation
    - if clinician_fields.object.new_record? && clinician_fields.object.secondary_entity_id.nil?
      = render :partial => 'events/clinician', :locals => { :f => clinician_fields }
    - else
      = render :partial => 'events/clinician_show', :locals => { :f => clinician_fields }
  #live_search_clinicians

  - blank_clinician = Clinician.new
  - blank_clinician.build_person_entity
  - blank_clinician.person_entity.build_person
  - blank_clinician.person_entity.telephones.build
  - blank_clinician.person_entity.person.person_type = 'clinician'

  %p{:style => "clear: both;"}
    %br
    = add_record_link event_form, :clinicians, "Add a Clinician", :object => blank_clinician, :partial => 'events/clinician'
