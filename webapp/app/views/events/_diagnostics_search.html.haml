-# Display the search results of a places live search
- if flash[:error]
  #flash-message.error-message
    = flash[:error]

%br
-if @places.empty?
  %b=t(:no_results)
-else
  %table.list
    %tr
      %th= t :name
      %th= t :address
      %th= t :type
      %th= t :actions
    - for place in @places do
      %tr
        %td=h place.name 
        %td=h preferred_address(place)
        %td=place.formatted_place_descriptions
        %td=link_to_remote(t(:add), :update => 'existing-facilities', :position => 'bottom', :url => { :action => :diagnostics_search_selection, :id => place.entity_id, :event_type => params['event_type'] })

  %br
  = ajaxy_pagination(@places, 'diagnostic_facilities')
