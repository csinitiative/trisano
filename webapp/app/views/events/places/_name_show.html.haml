-core_section :place_name_section, f do
  -f.fields_for(:place, :builder => ExtendedFormBuilder) do |place_form|
    -core_element_show :name, place_form, :horiz do
      =place_form.label(:name)
      =h(place_form.object.name)
    -core_element_show :place_type_id, place_form, :horiz do
      =place_form.label(:place_type_id)
      =place_form.object.formatted_place_descriptions unless place_form.object.place_types.empty?
  -event_form.fields_for(:participations_place, :builder => ExtendedFormBuilder) do |exposure_form|
    -core_element_show :date_of_exposure, exposure_form, :horiz do
      =exposure_form.label(:date_of_exposure)
      =ld(exposure_form.object.date_of_exposure)
