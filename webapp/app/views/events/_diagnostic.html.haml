%div{:class => 'diagnostic', :style => "clear: both;"}
  - f.fields_for(:place_entity, :builder => ExtendedFormBuilder) do |df|
    - df.fields_for(:place, :builder => ExtendedFormBuilder) do |place_fields|
      %div{:class => 'new_diagnostic_facility' }
        = error_messages_for :object => place_fields.object
        %span.horiz
          =place_fields.label(:name)
          =place_fields.text_field(:name, :size => 25, :maxlength => 255,:class => 'required_if_others')
        %span.horiz
          = diagnostic_type_selector(place_fields)
  %hr
