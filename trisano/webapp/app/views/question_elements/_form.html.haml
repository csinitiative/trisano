= f.hidden_field :parent_element_id

- f.fields_for("question_attributes", @question_element.question)  do |q|

  = q.hidden_field :core_data

  %p
    %label Question text
    %br
    = q.text_field :question_text

  %p
    %label Short name
    %br
    = q.text_field :short_name

  = f.label(:is_active, "Is active?")
  = f.radio_button :is_active, "true"
  Yes
  = f.radio_button :is_active, "false"
  No

  %p
    %label Style
    %br
    = q.select(:style, [["Horizontal", "horiz"], ["Vertical", "vert"]], {:include_blank => true}) 
