  %table.listingforms
    %tr
      %th.forminformation
        Code Information
      %th
    %tr
      %td
        .formname
          = @external_code.the_code
        .tools
          = @external_code.code_description
          %br
          %b Code Type:
          = @external_code.code_name
          %br
          %b Sort Order:
          = @external_code.sort_order
      %td
        .tools{:style => "position: absolute; right: 15px;"}
