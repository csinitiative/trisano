%tr{ :class => "role_membership" }
  - fields_for "user[role_membership_attributes][]", role do |rm_form|
    %td
      = role.new_record? ? "Add a(n)" : "Is a(n)"
    %td
      - if role.new_record?
        = rm_form.collection_select(:role_id, Role.find(:all, :order => :role_name), :id, :role_name, {}, {:index => nil})
      - else
        = role.role.role_name
    %td
      = role.new_record? ? "role for" : "in"
    %td
      - if role.new_record?
        = rm_form.collection_select(:jurisdiction_id, Place.find(:all, :conditions => ["entity_id IN (?)", User.current_user.admin_jurisdiction_ids], :order => "name ASC"), :entity_id, :name,  {}, {:index => nil})
      - else
        = role.jurisdiction.current_place.name
    %td
      - if role.new_record?
        = link_to_function "remove", "$(this).up('.role_membership').remove()"
      - else
        = link_to_function "remove", "mark_for_destroy(this)"
        = rm_form.hidden_field :id, :index => nil
        = rm_form.hidden_field :should_destroy, :index => nil, :class => 'should_destroy'
