- content_for :title do
  Edit User

/- content_for :name do

- content_for :tools do
  = link_to '< Back to Users', users_path
  %p
  
#rot
  %table.listingforms
    %tr
      %th.forminformation
        Users
      %tr
        %td.forminformation
          .tools
            = "#{@user.first_name} #{@user.last_name}"
          .formname
            UID:
            = @user.uid
          .tools
            Username:
            = @user.user_name
            %br
            Given Name:
            = @user.given_name
            %br
            Initials:
            = @user.initials
          .tools
            = link_to 'Show', @user

#rot
  %p
  = error_messages_for :object => [@user, @user.role_memberships]

  - form_for(@user) do |f|

    = render :partial => 'form', :locals => { :f => f, :user_data => @user }

    = f.submit "Update"

