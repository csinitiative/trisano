<% content_for :title do %>
  PLACE EVENT
<% end %>

<% content_for :name do %>
  <%= @event.active_place.primary_entity.place_temp.name -%>
<% end %>

<% content_for :tools do %>
  <%= link_to 'Show', place_event_path(@event) %>
<% end %>

<% content_for :watermark do %>
  place event
<% end %>

<% @form_index = 0 %>

<%= error_messages_for :object => @event %>

<div id="follow-up-error"></div>

<script type="text/javascript">
  var myTabs = new YAHOO.widget.TabView("place_event_tabs");
</script>

<%= tab_toggler(@can_investigate, %w(place_tab)) %>

<div id="place_event_tabs" class="yui-navset">
  <ul id='tabs' class="yui-nav">
    <li class="selected"><a href="#place_tab"><em>Place</em></a></li>
    <li><a href="#investigation_tab"><em>Investigation</em></a></li>
  </ul>

  <% form_for(@event, :url => place_event_path(@event), :builder => ExtendedFormBuilder) do |event_form| %>
    <%  @event_form = event_form %>

    <div class="yui-content">
      <div id="place_tab">
        <% event_form.fields_for(:active_place, @event.active_place.primary_entity, :builder => ExtendedFormBuilder) do |current_place| %>
          <%= render :partial => "events/places/form", :locals => { :f => current_place, :entity_data => @event.active_place.primary_entity, :event => @event } %>
        <% end %>
        <%= render :partial => 'events/core_tab_supplemental', :locals => { :f => event_form, :tab => "Place" } %>
      </div>
      <div id="investigation_tab">
        <p>
          <%= render :partial => 'events/disease_investigation_form', :locals => {:f => event_form} %>
        </p>
      </div>
    
    </div>
    <%= event_form.submit "Update" %>
  <% end %>
      
</div>
