<script type="text/javascript">
  setTimeout("Element.update('flash-message');", 3000);
</script>

<% place_name = @event.active_place.primary_entity.place_temp.name %>

<% content_for :title do %>
  Edit Place Event: <%= place_name %>
<% end %>

<% content_for :name do %>
  <%= place_name -%>

  <%- original_patient = Event.find(@event.contacts.first.secondary_entity.case_id) %>
  <span style='position: absolute; right: 0;'>
    <span>Original Patient: <%= link_to("#{original_patient.active_patient.primary_entity.person.first_name} #{original_patient.active_patient.primary_entity.person.last_name}", cmr_path(original_patient)) -%></span>
    <p style='font-size: 12px; font-weight: light;'><%= original_patient.disease.disease.disease_name unless original_patient.disease.nil? %></p>
  </span>
<% end %>

<% content_for :tools_two do %>
  <%= save_buttons(@event) %> 
<% end %>

<% content_for :tools do %>
  <%= link_to_function('Show', "send_url_with_tab_index('#{place_event_path(@event)}')") %>
<% end %>

<% @form_index = 0 %>

<%= error_messages_for :object => @event %>

<div id="follow-up-error"></div>

<% form_for(@event, :url => place_event_path(@event), :builder => ExtendedFormBuilder, :html => { :onsubmit => "this.action = build_url_with_tab_index(this.action);" } ) do |event_form| %>
  <%  @event_form = event_form %>

  <% tabs = []
     tabs << %w(place_tab Place)
     tabs << %w(investigation_tab Investigation)
     tabs << %w(notes_tab Notes)
  %>

  <% tabbed_content(tabs, @tab_index) do %>
    <div id="place_tab">
      <% event_form.fields_for(:active_place, @event.active_place.primary_entity, :builder => ExtendedFormBuilder) do |current_place| %>
        <%= render :partial => "events/places/form", :locals => { :f => current_place, :entity_data => @event.active_place.primary_entity, :event => @event } %>
      <% end %>
      <%= render :partial => 'events/core_tab_supplemental', :locals => { :f => event_form, :tab => "Place" } %>
    </div>
    <div id="investigation_tab">
      <p>
        <%= render :partial => 'events/disease_investigation_form', :locals => {:f => event_form} %>
      </p>
    </div>
    <div id="notes_tab">
      <p>
        <%= render :partial => 'events/note_form', :locals => {:f => event_form} %>
      </p>
    </div>
  <% end %>
  <%= event_form.submit "Save & Exit", :style => "display: none" %>
<% end %>
