<% place_name = @event.active_place.primary_entity.place_temp.name %>

<% content_for :title do %>
  View Place Event: <%= place_name %> 
<% end %>

<% content_for :name do %>
  <table class='listingforms'>
    <tr>
      <th class='forminformation'>Place Name</th>
      <th>Assigned Jurisidiction</th>
      <th>Original Patient</th>
    </tr>
    <tr>
      <% place = @event.active_place.primary_entity.person %>
      <td class='forminformation'>
        <div class='patientname'>
          <%= place_name %>
        </div>
        <small>Date: <%= @event.event_onset_date %></small>
        <div class='tools'>
          <%= basic_place_event_controls(@event, false) %>
        </div>
      </td>
      <td>
        <b><%= @event.primary_jurisdiction.short_name %></b>
      </td>
      <td>
        <%- original_patient = Event.find(@event.contacts.first.secondary_entity.case_id) %>
        <%= link_to("#{original_patient.active_patient.primary_entity.person.first_name} #{original_patient.active_patient.primary_entity.person.last_name}", cmr_path(original_patient)) -%>
        <p style='font-size: 12px; font-weight: light;'><%= original_patient.disease.disease.disease_name unless original_patient.disease.nil? || original_patient.disease.disease.nil? %></p>
      </td>
    </tr>
  </table>
<% end %>

<% content_for :tools do %>
<% end %>

<% form_for(@event, :url => place_event_path(@event), :builder => ExtendedFormBuilder) do |event_form| %>
  <% tabs = []
     tabs << %w(place_tab Place)
     tabs << %w(investigation_tab Investigation)
     tabs << %w(notes_tab Notes)
  %>

  <% tabbed_content(tabs, @tab_index) do %>
    <div id="place_tab">
      <% place_entity = @event.active_place.primary_entity %>
      <%= render :partial => "events/places/show", :locals => { :entity_data => place_entity, :event_form => event_form } %>
      <%= render :partial => 'events/core_tab_supplemental_show', :locals => { :f => event_form, :tab => "Place" } %>
    </div>
  
    <div id="investigation_tab">
      <%= render :partial => "events/investigation_show_tab" %>
    </div>

    <div id="notes_tab">
      <%= render :partial => "events/notes_show_tab" %>
    </div>
  <% end %>
<% end %>
