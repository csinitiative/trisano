<% content_for :title do %>
    PLACE EVENT
<% end %>

<% content_for :name do %>
  <%= @event.active_place.primary_entity.place_temp.name -%>
<% end %>

<% content_for :watermark do %>
    place event
<% end %>

<%- jurisdiction = @event.active_jurisdiction.secondary_entity.current_place %>
<% content_for :tools do %>
  <%= basic_place_event_controls(@event) %>
  <br />
  Assigned Jurisdiction: <%= jurisdiction.name %>
<% end %>

<script type="text/javascript">
  var myTabs = new YAHOO.widget.TabView("place_event_tabs");
</script>

<%= error_messages_for :object => @event %>

<%= tab_toggler(true, %w(place_tab)) %>

<div id="place_event_tabs" class="yui-navset">
<ul class="yui-nav" id="tabs">
  <li class="selected"><a href="#place_tab"><em>Place</em></a></li>
  <li><a href="#investigation_tab"><em>Investigation</em></a></li>
</ul>

<% form_for(@event, :url => place_event_path(@event), :builder => ExtendedFormBuilder) do |event_form| %>
  <div class="yui-content">
  
    <div id="place_tab">
      <% place_entity = @event.active_place.primary_entity %>
      <%= render :partial => "events/places/show", :locals => { :entity_data => place_entity, :event_form => event_form } %>
      <%= render :partial => 'events/core_tab_supplemental_show', :locals => { :f => event_form, :tab => "Place" } %>
    </div>
  
    <div id="investigation_tab">
      <%= render :partial => "events/investigation_show_tab" %>
    </div>
  </div>
<% end %>
