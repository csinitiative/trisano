%div{:id => "fb-inplace-container", :class => "fb-container"}
  %div{:id => "new-group-form", :class => 'fb-inplace-form'}

    = error_messages_for :group_element
    
    %h4 Add a new group
    - remote_form_for(@group_element) do |f|
      = render :partial => 'form', :locals => { :f => f }
      %p
        = f.submit "Create"
        &nbsp;&nbsp;
        = link_to_function "Close", "$('library-mods-#{@reference_element.id}').down('form').reset(); Effect.BlindUp($('library-mods-#{@reference_element.id}'), { duration: 0.1 })"

  = render :partial => "forms/library", :locals => {:direction => :to_library, :type => @reference_element.class.name}
