- content_for :title do
  Forms
  
- content_for :name do
  Form details:  
  = @form.name

- content_for :tools do
  = link_to 'Edit', edit_form_path(@form)
  |
  = link_to 'Back', forms_path
  |
  = link_to 'Form Builder', builder_path(@form)

- content_for :tools_two do
  = button_to("Create new form", {:action => "new"}, { :method => :get })

  
.name
  Form Detail
.tools
  = link_to 'Back to Forms', forms_path
  |
  = link_to 'Create New Form', new_form_path
  %p{:style => "color: green"}
    = flash[:notice]
#rot
  %table.listingforms
    %tr
      %th.forminformation
        Form Information
      %th Diseases
      %th Jurisdiction
      %th
      %tr
        %td.forminformation
          .formname
            = h @form.name
            %br
          .description  
            = h @form.description
          .status
            = h @form.status
        %td
          %ul
            - @form.diseases.each do |disease|
              %li.diseaselist= h disease.disease_name
        %td
          = h @form.jurisdiction.nil? ? "All" : @form.jurisdiction.current_place.name
        %td
          = link_to 'Edit', edit_form_path(@form)
          |
          = link_to 'Form Builder', builder_path(@form)