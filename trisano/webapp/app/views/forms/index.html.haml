- content_for :tools_two do
  = button_to("Create new form", {:action => "new"}, { :method => :get })

#rot
  %table.listingforms
    %tr
      %th.forminformation
        Form Information
      %th Diseases
      %th Jurisdiction
      %th Event Type
    - for form in @forms
      %tr
        %td.forminformation
          .formname
            = h form.name
            %br
          .description
            = h form.description
          .tools
            = link_to 'Builder', builder_path(form)
            |
            = link_to 'Show', form
            |
            = link_to 'Edit', edit_form_path(form)
            |
            = button_to 'Copy', copy_form_path(form), :id => "copy_form_#{form.id}"
        %td
          %ul
            - form.diseases.each do |disease|
              %li.diseaselist
                = h disease.disease_name
        %td
          = h form.jurisdiction.nil? ? "All" : form.jurisdiction.current_place.name
        %td
          = h form.event_type.humanize
          .status
            = h form.status