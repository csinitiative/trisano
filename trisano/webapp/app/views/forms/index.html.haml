- content_for :title do
  Forms

- content_for :name do
  Forms

- content_for :tools do
  = link_to 'New form', new_form_path

- content_for :tools_two do
  = button_to("Create new form", {:action => "new"}, { :method => :get })

.name
  Listing Forms
.tools
  %br
  %p{:style => "color: green"}
    = flash[:notice]
#rot
  %table.listingforms
    %tr
      %th.forminformation
        Form Information
      %th Diseases
      %th Jurisdiction
      %th
    - for form in @forms
      %tr
        %td.forminformation
          .formname
            = h form.name
            %br
          .description
            = h form.description
          .status
            = h form.status
        %td
          %ul
            - form.diseases.each do |disease|
              %li.diseaselist
                = h disease.disease_name
        %td
          = h form.jurisdiction.nil? ? "All" : form.jurisdiction.current_place.name
        %td
          = link_to 'Builder', builder_path(form)
          |
          = link_to 'Show', form
          |
          = link_to 'Edit', edit_form_path(form)