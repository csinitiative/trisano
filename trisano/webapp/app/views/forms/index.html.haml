- content_for :title do
  Form Builder

- content_for :name do
  Forms

- content_for :tools do
  = link_to 'New form', new_form_path

- content_for :tools_two do
  = button_to("Create new form", {:action => "new"}, { :method => :get })

.name
  Listing Forms
.tools
  = link_to 'Create New Form', new_form_path
  %p{:style => "color: green"}
    = flash[:notice]
#rot
  .left
    %table.forms
      %tr
        %th Name
        %th Description
        %th Diseases
        %th Jurisdiction
        %th Status
      - for form in @forms
        %tr
          %td
            = h form.name
          %td
            = h form.description
          %td
            %ul
              - form.diseases.each do |disease|
                %li.diseaselist
                  = h disease.disease_name
          %td
            = h form.jurisdiction.nil? ? "All" : form.jurisdiction.current_place.name
          %td
            = h form.status
          %td{:nowrap => ""}
            = link_to 'Builder', builder_path(form)
            |
            = link_to 'Show', form
            |
            = link_to 'Edit', edit_form_path(form)
  .right
    = yield :tools_two