!!!
%html
  %head
    %title 
      TriSano:
      = yield :title

    / = stylesheet_link_tag 'grid', 'structure', 'event', 'formbuilder', 'typography', 'scaffold', 'tabview', :cache => 'styles'
    = stylesheet_link_tag 'grid'
    = stylesheet_link_tag 'structure'
    = stylesheet_link_tag 'event'
    = stylesheet_link_tag 'formbuilder'
    = stylesheet_link_tag 'typography'
    = stylesheet_link_tag 'scaffold'
    = stylesheet_link_tag 'tabview'

    / = javascript_include_tag 'prototype', 'effects', 'dragdrop', 'controls', 'application', 'autotab', 'sniffer', 'yahoo-dom-event', 'element-beta-min', 'tabview-min', :cache => 'base'
    = javascript_include_tag 'prototype'
    = javascript_include_tag 'effects'
    = javascript_include_tag 'dragdrop'
    = javascript_include_tag 'controls'
    = javascript_include_tag 'application'
    = javascript_include_tag 'autotab'
    = javascript_include_tag 'sniffer'
    = javascript_include_tag 'yahoo-dom-event'
    = javascript_include_tag 'element-beta-min'
    = javascript_include_tag 'tabview-min'

    / Calendar
    = calendar_date_select_includes

  %body.yui-skin-sam
    = javascript_include_tag 'wz_tooltip'
    #head
      .container
        .left
          %a{:href => home_path}
            = image_tag("logo.png", :border => 0)
        .right
          .areas
            - if User.current_user.is_entitled_to?(:create_event)
              = link_to 'NEW CMR', new_cmr_path
              |
            = link_to 'CMRS', cmrs_path_with_defaults
            |
            - if User.current_user.is_admin?
              = link_to 'FORMS', forms_path
              |
            = link_to 'SEARCH', search_path
            - if User.current_user.is_admin?
              |
              = link_to 'ADMIN', admin_path
          .user
            - if RAILS_ENV == "production"
              = current_user_name
            - else 
              - users = User.find(:all).collect { |user| [ user.user_name, user.uid] }
              - form_tag(url_for(:controller => "events", :action => "change_user")) do
                %span{:id => "user_name"}= current_user_name + ":"
                = select_tag("user_id", options_for_select(users, User.current_user.uid), :onchange => "this.form.submit()", :style => "display: inline")
    #bar
      .container
        .left.areas_title
          = yield :title
        .right.action1
          = yield :tools_two
    #title_area
      .container
        - if flash[:notice]
          #flash-message.notice-message
            = flash[:notice]
        - elsif flash[:error]
          #flash-message.error-message
            = flash[:error]
        .name
          = yield :name
        .tools
          = yield :tools
    #main-content
      %script
        header_height = Element.getHeight('head') + Element.getHeight('bar') + Element.getHeight('title_area') + 2 + "px"
        Element.setStyle('main-content', {top: header_height})
      .container
        = yield
      .container
        #foot
          .footlogo
            = image_tag("foot.png", :border => 0)
          .foottext
            %a{:href => 'https://trisano.csinitiative.net/wiki/ProvideFeedbackOnTriSano'} TriSano Feedback
            |
            %a{:href => 'http://www.trisano.org'}TriSano.org