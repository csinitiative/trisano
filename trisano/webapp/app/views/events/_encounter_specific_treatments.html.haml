%fieldset
  %legend Encounter-specific Treatments

  - unless event.encounter_child_events.first.new_record?

    - for encounter in event.encounter_child_events
      - pe = encounter.participations_encounter
      %h4="Encounter on #{h pe.encounter_date}"
      = render :partial => "events/treatments_list", :locals => { :event => encounter }

  - else
    %h3 No encounters have been recorded for this event