-# This injects an existing place exposure into a form
-# Debt: Could be merged with _editable_place_exposure.html.haml

- prefix_with_array = "#{event_type}[new_diagnostic_attributes][]"

%div.existing_diagnostic{:style => 'margin-top: 20px'}
  %span.horiz
    %label Name
    = h(diagnostic.name)
  %span.horiz
    %label Type
    = h(diagnostic.place_type.code_description) unless diagnostic.place_type.nil?

  - diagnostic.id = nil
  - fields_for prefix_with_array, diagnostic, :builder => ExtendedFormBuilder do |diagnostic_fields|
    = diagnostic_fields.hidden_field(:entity_id, :value => diagnostic.entity_id)
    = link_to_function image_tag('delete.png', :border => 0), "$(this).up('.existing_diagnostic').remove()", {:id => "remove_existing_place_link"}
  %hr
