%fieldset.form
  %legend Name

  -# Nasty ugly hack to avoid having to do surgery on formbuilder after renaming the HTML fields
  -core_path = "#{fb_form.object_name}[person]"

  -f.fields_for(:person, entity_data.person, :core_path => core_path, :builder => ExtendedFormBuilder) do |p|
    -core_element :last_name, p, :horiz do
      =p.label(:last_name)
      =p.core_text_field(:last_name, {:size => 25, :class => "required", :maxlength => 25}, event, @can_investigate)
    -core_element :first_name, p, :horiz do
      =p.label(:first_name)
      =p.core_text_field(:first_name, {:size => 25, :maxlength => 25}, event, @can_investigate)
    -core_element :middle_name, p, :horiz do
      =p.label(:middle_name)
      =p.core_text_field(:middle_name, {:size => 25, :maxlength => 25}, event, @can_investigate)
  
