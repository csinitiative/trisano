%fieldset.form
  %legend Age

  -# Nasty ugly hack to avoid having to do surgery on formbuilder after renaming the HTML fields
  -core_path = "#{fb_form.object_name}[person]"

  -f.fields_for(:person, entity_data.person, :core_path => core_path, :builder => ExtendedFormBuilder) do |p|
    -core_element :birth_date, p, :horiz do
      =p.label(:birth_data, "Date of Birth")
      =p.core_calendar_date_select(:birth_date, {:year_range => 100.years.ago..0.years.from_now}, event )
    -core_element :approximate_age_no_birthday, p, :horiz do
      =p.label(:approximate_age_no_birthday, "Age")
      =p.core_text_field(:approximate_age_no_birthday, {:size => 3}, event)
    -core_element :age_at_onset, p, :horiz do
      -if @event.errors.on(:age_at_onset)
        .fieldWithErrors
          =p.label(:age_at_onset, 'Age at onset')
      -else
        =p.label(:age_at_onset, 'Age at onset')
      =@event.age_info
