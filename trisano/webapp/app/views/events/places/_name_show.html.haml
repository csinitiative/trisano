%fieldset.form
  %legend Place Name
  -core_element_show :name, place_form, :horiz do
    =place_form.label(:name)
    =place.name
  -core_element_show :place_type_id, place_form, :horiz do
    =place_form.label(:place_type_id, 'Type')
    =place.place_type.code_description if place.place_type
  -core_element_show :date_of_exposure, place_form, :horiz do
    =place_form.label(:date_of_exposure)
    =format_date(@event.active_place.participations_place.date_of_exposure)
