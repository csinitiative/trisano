%fieldset.form
  %legend Place Name
  -core_element_show :name, f, :horiz do
    =f.label(:name)
    =f.object.name
  -core_element_show :place_type_id, f, :horiz do
    =f.label(:place_type_id, 'Type')
    =f.object.place_type.code_description if f.object.place_type
  -event_form.fields_for(:participations_place, :builder => ExtendedFormBuilder) do |exposure_form|
    -core_element_show :date_of_exposure, exposure_form, :horiz do
      =exposure_form.label(:date_of_exposure)
      =exposure_form.object.date_of_exposure
