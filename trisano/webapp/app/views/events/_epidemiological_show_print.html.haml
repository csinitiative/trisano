%span.section-header
  Epidemiological Information

%span.subsection-header
  Contact Oriented
- event_form.fields_for(:active_patient, @event.active_patient, :builder => ExtendedFormBuilder) do |active_patient_form|
  - active_patient_form.fields_for(:participations_risk_factor, @event.active_patient.participations_risk_factor, :builder => ExtendedFormBuilder) do |risk_factor_form|
    - core_element_print :food_handler_id, risk_factor_form, :horiz do
      %span.print-label Food handler:
      %span.print-value= l @event.active_patient.participations_risk_factor.food_handler unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :healthcare_worker_id, risk_factor_form, :horiz do
      %span.print-label Healthcare worker:
      %span.print-value= l @event.active_patient.participations_risk_factor.healthcare_worker unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :group_living_id, risk_factor_form, :horiz do
      %span.print-label Group living:
      %span.print-value= l @event.active_patient.participations_risk_factor.group_living unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :day_care_association_id, risk_factor_form, :horiz do
      %span.print-label Day care association:
      %span.print-value= l @event.active_patient.participations_risk_factor.day_care_association unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :occupation, risk_factor_form, :vert do
      %span.print-label Occupation:
      %span.print-value= @event.active_patient.participations_risk_factor.occupation unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

%span.subsection-header
  Place Exposures

=render :partial => 'events/place_exposures_print.html.haml', :locals => {:event_form => event_form}

%span.subsection-header
  Other
- event_form.fields_for(:active_patient, @event.active_patient, :builder => ExtendedFormBuilder) do |active_patient_form|
  - active_patient_form.fields_for(:participations_risk_factor, @event.active_patient.participations_risk_factor, :builder => ExtendedFormBuilder) do |risk_factor_form|
    - core_element_print :risk_factors, risk_factor_form, :horiz do
      %span.print-label Risk factors:
      %span.print-value= @event.active_patient.participations_risk_factor.risk_factors unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :risk_factors_notes, risk_factor_form, :horiz do
      %span.print-label Risk factors notes:
      %span.print-value= @event.active_patient.participations_risk_factor.risk_factors_notes unless @event.active_patient.nil? or @event.active_patient.participations_risk_factor.nil?

    - core_element_print :imported_from_id, event_form, :horiz do
      %span.print-label Imported from:
      %span.print-value= l @event.imported_from
    
    - core_element_print :other_data_1, event_form, :horiz do
      %span.print-label Other data:
      %span.print-value= h(@event.other_data_1)

    - core_element_print :other_data_2, event_form, :vert do
      %span.print-label &nbsp;
      %span.print-value= h(@event.other_data_2)
