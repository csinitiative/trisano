<fieldset>
  <%= render :partial => 'entities/people/person_legend' %>
  <div id='person_form'>
    
    <%= f.hidden_field(:entity_type) %>
    <%- event = event.nil? ? nil : event %>
    
    <%= error_messages_for :object => entity_data.person %>
    <%= render :partial => 'entities/people/name_form', :locals => {:f => f, :event => event, :entity_data => entity_data} %>
    <%= render :partial => 'entities/people/address_form', :locals => {:f => f, :event => event, :entity_data => entity_data} %>
    <%= render :partial => 'entities/people/age_form', :locals => {:f => f, :event => event, :entity_data => entity_data} %>
    <%= render :partial => 'entities/people/phones_form', :locals => {:f => f, :event => event, :entity_data => entity_data, :rendering_pt => rendering_pt} %>
    <%= render :partial => 'entities/people/demographics_form', :locals => {:f => f, :event => event, :entity_data => entity_data} %>
    
  </div>
</fieldset>
