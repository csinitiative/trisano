
%h1 Listing program

%table
  %tr
    %th Name
    %th{:colspan => 3} Actions
  - for program in @programs
    %tr
      %td
        = h program.name
      %td
        = link_to 'Show', program
      %td
        = link_to 'Edit', edit_program_path(program)
      %td
        = link_to 'Destroy', program, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New program', new_program_path