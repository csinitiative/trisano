%h1 New disease

= error_messages_for :disease

- form_for(@disease) do |f|

  = render :partial => 'form', :locals => { :f => f }

  %p
    %span{:id => "submitbutton" }
      %span{:class => "first-child"}
        = f.submit "Create"

= link_to 'Back', diseases_path



<script type="text/javascript">
var oButton = new YAHOO.widget.Button("submitbutton", { type: "submit" } );
</script>