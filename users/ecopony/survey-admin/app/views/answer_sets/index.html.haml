
%h1 Listing answers sets

%table
  %tr
    %th Text
    %th{:colspan => 3} Actions
  - for answer_set in @answer_sets
    %tr
      %td
        = h answer_set.name
      %td
        = link_to 'Show', answer_set
      %td
        = link_to 'Edit', edit_answer_set_path(answer_set)
      %td
        = link_to 'Destroy', answer_set, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New answer set', new_answer_set_path