
%h1 Listing groups

%table
  %tr
    %th Name
    %th{:colspan => 3} Actions
  - for group in @groups
    %tr
      %td
        = h group.name
      %td
        = link_to 'Show', group
      %td
        = link_to 'Edit', edit_group_path(group)
      %td
        = link_to 'Destroy', group, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New group', new_group_path