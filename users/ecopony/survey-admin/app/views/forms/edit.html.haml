%h1 Editing form

= error_messages_for :form

%fieldset
  %legend
    Form Information

    - form_for(@form) do |f|

      = render :partial => 'form', :locals => { :f => f }
  
      %p
        %span{:id => "submitbutton" }
          %span{:class => "first-child"}
            = f.submit "Update"


    = link_to 'Show', @form 
    |
    = link_to 'Back', forms_path
    |
    = link_to 'Form Builder', builder_path(@form)

    %br

<script type="text/javascript">
var oButton = new YAHOO.widget.Button("submitbutton", { type: "submit" } );
</script>