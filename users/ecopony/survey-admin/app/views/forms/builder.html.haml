
= link_to "Back to form edit", edit_form_path(@form)

%h1
  = @form.name
  Builder

%fieldset
  %legend
    Sections
  %span{:id => 'section-info'}
  %ul{:id => "section-list", :class => "draggableMenu"}
    - for section in @form.sections
      %li{:id => "name_#{section.id}"}
        = section.name
        %small
          %br
            = link_to_remote "Edit section name", :url => { :controller => "forms", :action => "short_section_edit", :id => section.id}
            |
            = show_link "Show groups", "groups", section.groups

  = link_to_remote "Add Section", :url => { :controller => "forms", :action => "short_section_new", :id => @form.id}
  %div{:id => "section-mods"}
    / = render :partial => 'sections/short_form', :locals => { :section => Section.new, :form_id => @form.id }

%fieldset
  %legend
    Groups
  %div{ :id => "groups" }
    Select a section
  %br
  Add Group

%fieldset
  %legend
    Questions
  %div{ :id => "questions" }
    Select a group.

%fieldset
  %legend
    Answer Set
  Select a question.

= button_to "Publish", {:action => "publish", :id => @form.id, :confirm => "Are you sure?"}

%h1
  = @form.name
  Preview

%div{:id => 'preview'}
  = render :partial => 'render', :locals => {:form => @form}

= sortable_element 'section-list', :update => 'section-info', :complete => visual_effect(:highlight, 'section-list'), :url => { :action => "section_sort", :id => @form}

<script type="text/javascript">
var oButton = new YAHOO.widget.Button("submitbutton", { type: "submit" } );
</script>
