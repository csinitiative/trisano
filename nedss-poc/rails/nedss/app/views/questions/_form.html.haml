

= f.hidden_field :parent_id

%p
  %label Question text
  %br
  = f.text_field :question_text

  %label Help text
  %br
  = f.text_field :help_text

  %label Data type
  %br
  = f.text_field :data_type

  %label Size
  %br
  = f.text_field :size

  %label Condition
  %br
  = f.text_field :condition

  %label Display as
  %br
  = f.text_field :display_as

