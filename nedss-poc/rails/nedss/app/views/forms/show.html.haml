- content_for :title do
  Form Builder

- content_for :name do
  Form details:  
  = @form.name

- content_for :tools do
  = link_to 'Edit', edit_form_path(@form)
  |
  = link_to 'Back', forms_path
  |
  = link_to 'Form Builder', builder_path(@form)

%p
  %span.label Name: 
  =h @form.name

%p
  %span.label Description: 
  =h @form.description

%p
  %span.label Show for diseases: 
  %ul
    - @form.diseases.each do |disease|
      %li= h disease.disease_name

%p
  %span.label Show for jursidiction: 
  =h @form.jurisdiction.nil? ? "All Jurisdictions" : @form.jurisdiction.current_place.name

%p
  %span.label Status: 
  =h @form.status

