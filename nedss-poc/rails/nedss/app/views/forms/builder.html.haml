%div{:id => "formbuilder-container"}
  %div{:id => "formbuilder-header"}

    = button_to "Publish", {:action => "publish", :id => @form.id}

  %div{:id => "formbuilder-body"}

    %small{:style => "#float: right"}
      &nbsp;&nbsp;
      = link_to_remote("Add a core tab configuration", :url => {:controller => "core_view_elements", :action => "new", :form_element_id => @form.form_base_element.id}, :method => :get)
      &nbsp;&nbsp;
      = link_to_remote("Add a tab", :url => {:controller => "view_elements", :action => "new", :form_element_id => @form.form_base_element.id}, :method => :get)
    %br

    %div{:id => "builder-mods"}

    %ul{:id => "root-element-list"}
      = render :partial => 'forms/elements'

