<h1>New Confidential Morbidity Report</h1>

<%# Debt: Figure out how to merge these all together. %>
<%# TODO: Add all other objects %>

<%= error_messages_for :object => [@event, @event.disease, @event.lab_result, @event.active_patient.active_primary_entity.person] %>
<%= error_messages_for :object => [@event.active_patient.active_primary_entity.entities_location] unless @event.active_patient.active_primary_entity.entities_location.nil? %>
<%= error_messages_for :object => [@event.active_patient.active_primary_entity.address] unless @event.active_patient.active_primary_entity.address.nil? %>
<%= error_messages_for :object => [@event.active_patient.active_primary_entity.telephone] unless @event.active_patient.active_primary_entity.telephone.nil? %>

<%= error_messages_for :object => [@event.active_hospital.hospitals_participation] unless @event.active_hospital.nil? and @event.active_hospital.hospitals_participation.nil? %>
<%= error_messages_for :object => [@event.active_reporting_agency.active_secondary_entity.place] unless @event.active_reporting_agency.nil? %>
<%= error_messages_for :object => [@event.current_treatment.participations_treatment] unless @event.current_treatment.nil? and @event.current_treatment.participations_treatment.nil? %>

<script type="text/javascript">
var myTabs = new YAHOO.widget.TabView("cmr_tabs");
</script> 

<% form_for(@event, :url => cmrs_path, :builder => ExtendedFormBuilder) do |event_form| %>
    <span id='disable_tabs' onClick="myTabs.removeClass('yui-navset'); myTabs.removeClass('yui-content'); ['demographic_tab','clinical_tab','lab_info_tab','administrative_tab'].each(Element.show); Element.removeClassName('admin_tab_link','selected'); Element.removeClassName('lab_tab_link','selected'); Element.removeClassName('clinic_tab_link','selected'); Element.removeClassName('dem_tab_link','selected'); Element.hide('disable_tabs'); Element.hide('tabs'); Element.show('enable_tabs');return false;">[Disable Tabs]</span>
    <span id='enable_tabs' onClick="myTabs.addClass('yui-navset'); myTabs.addClass('yui-content'); ['demographic_tab','clinical_tab','lab_info_tab','administrative_tab','enable_tabs'].each(Element.hide); Element.show('disable_tabs'); Element.show('tabs'); myTabs.set('activeIndex',0); return false;" style='display: none;'>[Enable Tabs]</span>
  <div id="cmr_tabs" class="yui-navset">
    <ul class="yui-nav" id='tabs'>
      <li id='dem_tab_link' class="selected"><a href="#demographic_tab"><em>Demographic Information</em></a></li>
      <li id='clinic_tab_link'><a href="#clinical_tab"><em>Clinical Information</em></a></li>
      <li id='lab_tab_link'><a href="#lab_info_tab"><em>Laboratory Information</em></a></li>
      <li id='admin_tab_link'><a href="#administrative_tab"><em>Administrative</em></a></li>
    </ul>

    <div class="yui-content">
      <% event_form.fields_for(:active_patient, @event.active_patient, :builder => ExtendedFormBuilder) do |patient_fields| %>
        <% patient_fields.fields_for(:active_primary_entity, @event.active_patient.active_primary_entity, :builder => ExtendedFormBuilder) do |current_patient| %>
          <div id="demographic_tab">
            <%= render :partial => "entities/people/form", :locals => { :f => current_patient, :entity_data => @event.active_patient.active_primary_entity } %>
            <%= render :partial => 'locations/form', :locals => { :f => current_patient, :location_data => @event.active_patient.active_primary_entity } %>
          </div>
        <% end %>
      <% end %>
      <div id="clinical_tab"><p><%= render :partial => 'disease_info_form', :locals => { :f => event_form } %></p></div>
      <div id="lab_info_tab"><p><%= render :partial => 'lab_info_form', :locals => {:f => event_form} %> </p></div>
      <div id="administrative_tab"><p><%= render :partial => 'cmr_info_form', :locals => {:f => event_form} %> </p></div>
    </div>
  </div>
  <%= event_form.submit "Create" %>
<% end %>
</p>

<%= link_to 'Back', cmrs_path %>
