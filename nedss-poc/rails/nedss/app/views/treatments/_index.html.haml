- if @event.active_patient.participations_treatments.empty?
  %h3 No treatments have been recorded for this case
- else
  %table
    %tr
      %th Treatment Given
      %th Treatment

    - for treatment in @event.active_patient.participations_treatments
      %tr
        %td=l treatment.treatment_given_yn
        %td=treatment.treatment
        %td=link_to_remote_redbox("Edit treatment", {:url => edit_cmr_treatment_path(@event, treatment), :method => :get}, :id => "edit-treatment-#{treatment.id}-link")
