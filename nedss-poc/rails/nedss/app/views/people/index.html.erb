<h1>Listing people</h1>

<table>
<% for entity in @person_entities %>
  <tr>
    <td><%= entity.current.last_name %>, <%= entity.current.first_name %> </td>
    <td><%= link_to 'Show', person_path(entity) %></td>
    <td><%= link_to 'Edit', edit_person_path(entity) %></td>
    <td><%= link_to 'Destroy', person_path(entity), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

