%fieldset.vert
  %legend=t(:expected_delivery_info, :scope => :perinatal_hep_b_management)
  -@event.prepare_perinatal_hep_b_data
  -fields_for(@event, :builder => ExtendedFormBuilder) do |e|
    -e.fields_for(:expected_delivery_facility, :builder => ExtendedFormBuilder) do |df|
      -df.fields_for(:expected_delivery_facilities_participation, :builder => ExtendedFormBuilder) do |dfp|
        -core_element(:expected_delivery_date, dfp, :vert) do
          =dfp.label(:expected_delivery_date)
          =ld(dfp.object.expected_delivery_date)
      -df.fields_for(:place_entity, :builder => ExtendedFormBuilder) do |pe|
        -pe.fields_for(:place, :builder => ExtendedFormBuilder) do |p|
          -core_element(:name, p, :horiz) do
            =p.label(:name, t(:expected_delivery_facility_name, :scope => :perinatal_hep_b_management))
            =p.object.name
        -pe.fields_for(:telephones, :builder => ExtendedFormBuilder) do |t|
          =show_telephones(t)
