%div{:class => 'treatment', :style => "clear: both;"}
  = error_messages_for :object => f.object
  %span{:class => "horiz"}
    - core_element :treatment_given_yn_id, f, :horiz do
      = f.label :treatment_given_yn_id
      = f.dropdown_code_field(:treatment_given_yn_id, 'yesno', {})

    - core_element :treatment_id, f, :horiz do
      = f.label :treatment_name
      = f.core_dropdown_field(:treatment_id, Treatment.all_by_type(Code.find_by_code_name_and_the_code("treatment_type", "PHBV")), :id, :treatment_name)

    - core_element :treatment_date, f, :horiz do
      = f.label :treatment_date
      = f.core_calendar_date_select(:treatment_date, {:size => 20, :year_range => 100.years.ago..1.years.from_now, :class => "required_if_others"})

    %span.horiz
      - unless f.object.new_record?
        = f.label :_delete
        = f.check_box :_delete
%hr
