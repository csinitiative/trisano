-@event.prepare_perinatal_hep_b_data
#health_care_provider
  -fields_for(@event, :builder => ExtendedFormBuilder) do |e|
    -e.fields_for(:health_care_provider, :builder => ExtendedFormBuilder) do |hcp|
      -core_section(:section, hcp) do
        -hcp.fields_for(:person_entity, :builder => ExtendedFormBuilder) do |pe|
          =render :partial => 'people/name_form', :locals => {:f => pe, :event => @event, :event_form => nil}

          %fieldset.form
            %legend="#{t 'telephone'}"
            -pe.fields_for(:telephones, :builder => ExtendedFormBuilder) do |t|
              =edit_telephones(t)