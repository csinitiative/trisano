- if @event.interested_party.treatment_ids.compact.empty?
  %h3=t 'no_treatments', :thing => 'event'
- else
  %table.list
    %tr
      %th=t('activerecord.attributes.participations_treatment.treatment_given_yn_id')
      %th=t('activerecord.attributes.participations_treatment.treatment_name')
      %th=t('activerecord.attributes.participations_treatment.treatment_date')

    - for treatment in @event.interested_party.treatments
      %tr
        %td= h(l(treatment.treatment_given_yn))
        %td= h(treatment.treatment.try(:treatment_name))
        %td= ld(treatment.treatment_date)
